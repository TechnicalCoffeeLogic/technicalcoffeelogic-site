---
import GradientText from "./Gradient-Text.astro";
---

<div class="px-6">
  <div class="mx-auto max-w-3xl pt-20 pb-5 sm:pt-48">
    <div>
      <div>
        <div class="flex justify-center w-100">
          <img src="/TCLCoffeeCupOutline.png" class="sm:w-1/2 w-2/3" />
        </div>
        <h1 class="font-bold tracking-tight text-center text-4xl">
          <GradientText>Web Development And Beyond</GradientText>
        </h1>
        <p class="text-3xl font-bold text-gray-600 text-center">
          To The Glory Of God
        </p>
        <div class="mt-8 flex gap-x-4 justify-center">
          <a
            href="/projects"
            class="inline-block rounded-lg px-4 py-1.5 text-base font-semibold leading-7 text-gray-900 ring-1 ring-green-400 hover:ring-greem-500 shadow shadow-blue-400"
          >
            Projects

            <span class="text-gray-400" aria-hidden="true">&rarr;</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
