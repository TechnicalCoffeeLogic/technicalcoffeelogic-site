---
import GradientText from "./Gradient-Text.astro";
---
<div class="px-6">
  <div class="mx-auto max-w-3xl pt-20 pb-5 sm:pt-48 ">
    <div>
      <div>
        <div class=" flex justify-center w-100">
            <img src="/TCLCoffeeCupOutline.png" class=" sm:w-1/2 w-2/3">
        </div>
        <h1
          class="font-bold tracking-tight text-center text-4xl"
          >
          <GradientText text="Web Development"/>
      </h1>
      <p class="mt-6 text-3xl font-bold text-gray-600 text-center">
          To The Glory Of God.
        </p>
        <div class="mt-8 flex gap-x-4 justify-center">
          <a
            href="#"
            class="inline-block rounded-lg bg-green-400 px-4 py-1.5 text-base font-semibold leading-7 text-white shadow-sm ring-1 ring-green-400 hover:bg-green-500 hover:ring-green-500"
          >
            Contact
            <span class="text-green-200" aria-hidden="true">&rarr;</span>
          </a>
          <a
            href="#"
            class="inline-block rounded-lg px-4 py-1.5 text-base font-semibold leading-7 text-gray-900 ring-1 ring-gray-900/10 hover:ring-gray-900/20"
          >
            View Products
            <span class="text-gray-400" aria-hidden="true">&rarr;</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
